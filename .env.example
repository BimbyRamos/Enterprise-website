# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000/api
API_URL=http://localhost:4000/api

# CMS Configuration (Strapi)
NEXT_PUBLIC_CMS_URL=http://localhost:1337
CMS_API_TOKEN=your_strapi_api_token_here

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=enterprise_website
DATABASE_USER=postgres
DATABASE_PASSWORD=your_database_password_here
DATABASE_URL=postgresql://postgres:your_database_password_here@localhost:5432/enterprise_website

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password_here
SMTP_FROM=noreply@example.com

# File Storage (AWS S3 or DigitalOcean Spaces)
STORAGE_PROVIDER=s3
STORAGE_REGION=us-east-1
STORAGE_BUCKET=enterprise-website-media
STORAGE_ACCESS_KEY=your_access_key_here
STORAGE_SECRET_KEY=your_secret_key_here
STORAGE_ENDPOINT=https://s3.amazonaws.com

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google Maps (for office locations)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_GTM_ID=

# Monitoring (optional)
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Feature Flags
ENABLE_NEWSLETTER=true
ENABLE_JOB_APPLICATIONS=true
ENABLE_CONTACT_FORM=true
